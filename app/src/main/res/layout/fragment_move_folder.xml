<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="isLoading"
            type="Boolean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_200">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_500"
            android:minHeight="@dimen/_35sdp"
            android:visibility="gone"
            app:titleTextColor="@android:color/white" />


        <LinearLayout
            android:id="@+id/linear_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.b2b.mytask.customviews.CustomTextView
                    android:id="@+id/txt_inbox"
                    style="@style/home_textview"
                    android:gravity="start|center"
                    android:text="@string/inbox"
                    app:layout_constraintLeft_toRightOf="@+id/img_folder"
                    app:layout_constraintRight_toLeftOf="@+id/txt_unseen_inbox" />

                <ImageView
                    android:id="@+id/img_arrow_inbox"
                    style="@style/home_imageview"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_recView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="LinearLayoutManager"
                app:visibleGone="@{!isLoading}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:gravity="center">

            <com.b2b.mytask.customviews.CustomTextView
                android:id="@+id/txt_no_folder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_more_folders"
                android:textColor="@color/grey_900"
                android:textSize="@dimen/_15sdp"
                app:visibleGone="@{isLoading}" />
        </LinearLayout>

    </RelativeLayout>

</layout>
