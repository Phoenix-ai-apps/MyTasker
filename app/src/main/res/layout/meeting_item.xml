<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_6sdp"
            android:background="@android:color/white"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <com.b2b.mytask.customviews.CustomTextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:textSize="@dimen/_17sdp"
                    app:fontName="@string/regular_font" />

                <com.b2b.mytask.customviews.CustomTextView
                    android:id="@+id/tv_meeting_hdr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp"
                    app:fontName="@string/regular_font" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/person"
                        android:gravity="center">

                        <com.b2b.mytask.customviews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="S"
                            android:textColor="@android:color/white"
                            app:fontName="@string/bold_font" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:background="@drawable/person">

                        <com.b2b.mytask.customviews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="N"
                            android:textColor="@android:color/white"
                            app:fontName="@string/bold_font" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_28sdp"
                        android:background="@drawable/person"
                        android:backgroundTint="@color/txt_color">

                        <com.b2b.mytask.customviews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="3+"
                            android:textColor="@android:color/white"
                            app:fontName="@string/bold_font" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>